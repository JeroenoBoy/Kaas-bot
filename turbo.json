{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "db:migrate": { "cache": false },
    "db:generate": { "cache": false },
    "db:push": { "cache": false },
    "dev": {
      "dependsOn": ["^db:migrate"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
